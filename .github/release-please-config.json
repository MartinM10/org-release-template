{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "packages": {
        ".": {
            "release-type": "python",
            "changelog-path": "CHANGELOG.md",
            "bump-minor-pre-major": true,
            "bump-patch-for-minor-pre-major": true,
            "include-component-in-tag": false,
            "include-v-in-tag": true,
            "changelog-sections": [
                {
                    "type": "feat",
                    "section": "Added",
                    "hidden": false
                },
                {
                    "type": "fix",
                    "section": "Fixed",
                    "hidden": false
                },
                {
                    "type": "perf",
                    "section": "Changed",
                    "hidden": false
                },
                {
                    "type": "refactor",
                    "section": "Changed",
                    "hidden": false
                },
                {
                    "type": "docs",
                    "section": "Changed",
                    "hidden": false
                },
                {
                    "type": "style",
                    "section": "Changed",
                    "hidden": true
                },
                {
                    "type": "test",
                    "section": "Changed",
                    "hidden": true
                },
                {
                    "type": "build",
                    "section": "Changed",
                    "hidden": true
                },
                {
                    "type": "ci",
                    "section": "Changed",
                    "hidden": true
                },
                {
                    "type": "chore",
                    "section": "Changed",
                    "hidden": true
                }
            ]
        }
    }
}